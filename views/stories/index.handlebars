<h1>Public Stories</h1>
<div class="row">
  {{#each stories }}
  <div class="col s12 m4">
    <div class="card">
      {{#if (showEditIcon user ../user) }}
      <!-- `../user` is `req.user` in global scope -->
      <div>
        <a href="/stories/edit/{{id}}" class="btn-floating btn-edit red">
          <i class="fa fa-pencil"></i>
        </a>
      </div>
      {{/if}}
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text">{{stripTags (truncate (convertMarkdown contents) 150)}}</p>
        <br>
        <a href="/stories/user/{{user.id}}">
          <div class="chip">
            <img src="{{user.imageURL}}" alt="story author"> {{user.firstName}} {{user.lastName}}
          </div>
        </a>
      </div>
      <div class="card-action center-align">
        <a class="btn teal" href="/stories/show/{{id}}">Read More</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>You need to write some stories, dude!</p>
  {{/each}}
</div>